{% extends "base.html.twig" %}

{% block title %}{{ product.name }} - Footshop{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ product.image }}" class="img-fluid" alt="{{ product.name }}">
            {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                    <span>Pas d'image</span>
                </div>
            {% endif %}
        </div>
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p class="text-primary display-5 fw-bold">{{ product.price }}â‚¬</p>
            <p>{{ product.description }}</p>
            <p>Stock : <strong>{{ product.stock }}</strong></p>
            <button class="btn btn-primary btn-lg">Ajouter au panier</button>
            <a href="{{ path('app_products_list') }}" class="btn btn-secondary btn-lg">Retour</a>
        </div>
    </div>
</div>
{% endblock %}
